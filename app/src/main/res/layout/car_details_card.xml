<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">


        <ImageView
            android:id="@+id/car_pic"
            android:tag="image_tag"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@drawable/bmc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:text="Address"
            android:textSize="15sp"
            android:textColor="#AB000000"

            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:layout_toEndOf="@+id/car_pic"
            android:layout_toRightOf="@+id/car_pic"
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/days"
            android:textSize="15sp"
            android:text="Date"
            android:drawableStart="@drawable/ic_av_timer_black_24dp"
            android:textColor="#48000000"
            android:textStyle="italic"
            android:drawablePadding="10dp"
            android:layout_toEndOf="@+id/car_pic"
            android:layout_toRightOf="@+id/car_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/uploader"
            android:drawableLeft="@drawable/ic_av_timer_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploader"
            android:textSize="15sp"
            android:text="Uploader"
            android:textColor="#AD000000"
            android:layout_toEndOf="@+id/car_pic"
            android:layout_toRightOf="@+id/car_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:layout_below="@+id/address"
            android:drawableLeft="@drawable/ic_person_black_24dp" />
        <ImageView
            android:id="@+id/navigate_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/navigate"
            android:layout_alignParentRight="true" />




    </RelativeLayout>



</androidx.cardview.widget.CardView>

